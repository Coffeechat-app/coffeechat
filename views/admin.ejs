<div id="page">
    <div id="chat-list">
        <a href="/users/@me" class="user">
            <div class="avatar"><img src="<%= currentUser.profile_picture %>" /></div><%= currentUser.username %>
        </a>


    </div>

    <div id="profile" class="page">
        <div class="page-header clearfix">
            <span>Coffeechat Admin </span><img
                src="https://cdn.glitch.com/fed07a0d-f89e-468a-b25a-f38a95ed433a%2Fverified_bot_developer.png?v=1596482570475"
                width=30 height=30>
            <ul>
                <li style="color: #6495ed">Coffeechat Moderator Controls</li>
            </ul>
        </div>
        <div class="profile-body scroll-hijack">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h4>Admin Controls</h4>
                    <hr>

                    <a data-toggle="modal" data-target="#modal">
                        <div class="square">
                            <h4>
                                <b>Account banning</b>
                            </h4>
                            <hr>
                            <small>
                                Delete an account. 
                            </small>
                        </div>
                    </a>

                    <div class="modal" id="modal" tabindex="-1" role="dialog" data-backdrop="false"
                        aria-labelledby="modalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content" style="background-color: #242424">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalLabel">Username of the user to ban</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form id="ban-form">
                                        <div class="md-form mb-3">
                                            <input id="username" name="username" class="form-control" type="text"
                                                placeholder="Username">
                                        </div>
                                    </form>
                                    <small id="error" style="display: none" class="text-danger">
                                        No user matching this username
                                    </small>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                                    <button type="submit" form="ban-form" class="btn btn-primary">Ban</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>